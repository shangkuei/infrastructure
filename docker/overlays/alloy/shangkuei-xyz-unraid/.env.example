# Alloy Environment Variables - shangkuei-xyz-unraid
# Copy to .enc.env and encrypt with: make encrypt

# Cluster identification
CLUSTER_NAME=shangkuei-unraid

# Host identification
HOSTNAME=unraid

# Loki endpoint (via Tailscale)
LOKI_URL=http://loki/loki/api/v1/push
LOKI_TENANT_ID=shangkuei-lab

# Prometheus endpoint (via Tailscale)
PROMETHEUS_URL=http://prometheus:9090/api/v1/write

# Tailscale authentication
# Generate at: https://login.tailscale.com/admin/settings/keys
TS_AUTHKEY=tskey-auth-xxxxx
TS_EXTRA_ARGS=--advertise-tags=tag:k8s-service
