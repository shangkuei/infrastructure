# Vaultwarden Environment Configuration for shangkuei-xyz-unraid
# Copy to .env and fill in actual values

# =============================================================================
# Database Configuration (Required)
# =============================================================================
DB_NAME=vaultwarden
DB_USER=vaultwarden
DB_PASS=your-secure-database-password

# =============================================================================
# Server Configuration
# =============================================================================
# Public domain (used for email links, etc.)
VAULTWARDEN_DOMAIN=https://vaultwarden.shangkuei.xyz

# Local port mapping (if not using Tailscale)
VAULTWARDEN_PORT=8080

# Timezone
TZ=Asia/Taipei

# =============================================================================
# Security Settings
# =============================================================================
# Disable public signups (use invitations instead)
SIGNUPS_ALLOWED=false
INVITATIONS_ALLOWED=true
SHOW_PASSWORD_HINT=false

# Admin panel token (generate with: vaultwarden hash or use argon2id)
# Example: $argon2id$v=19$m=65540,t=3,p=4$...
ADMIN_TOKEN=your-admin-token-hash

# =============================================================================
# SMTP Configuration (for email notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURITY=force_tls
SMTP_FROM=your-email@gmail.com
SMTP_FROM_NAME=vaultwarden.shangkuei.xyz
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_AUTH_MECHANISM=Login

# =============================================================================
# Yubico 2FA Configuration (Optional)
# Get credentials at: https://upgrade.yubico.com/getapikey/
# =============================================================================
YUBICO_CLIENT_ID=your-yubico-client-id
YUBICO_SECRET_KEY=your-yubico-secret-key

# =============================================================================
# Push Notifications (Optional)
# Get credentials at: https://bitwarden.com/host/
# =============================================================================
PUSH_ENABLED=true
PUSH_INSTALLATION_ID=your-installation-id
PUSH_INSTALLATION_KEY=your-installation-key

# =============================================================================
# Tailscale Configuration (for docker-compose.tailscale.override.yml)
# =============================================================================
# Auth key from: https://login.tailscale.com/admin/settings/keys
# Use reusable key or OAuth client for production
TS_AUTHKEY=tskey-auth-xxxxx

# Extra arguments for tailscale up (optional)
# Example: --advertise-tags=tag:server --hostname=vaultwarden
TS_EXTRA_ARGS=

# Domain for Tailscale HTTPS certificate (from tailnet)
# Example: vaultwarden.tail12345.ts.net
TS_CERT_DOMAIN=vaultwarden.your-tailnet.ts.net
